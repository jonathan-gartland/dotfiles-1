# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#
# Color definitions
#

color hdrdefault cyan default
# The following lines are used for messages with nested quoting
color quoted green default
color quoted1 cyan default
color quoted2 green default
color quoted3 cyan default
# Highlight signatures
color signature red default
color indicator brightyellow red
color error brightred default
color status brightyellow blue
# Color the thread tree in the index menu
color tree red default
color tilde red default
color message cyan default
#color normal brightwhite default
color attachment red default
# Highlight search patterns in the pager.
color search black green
color header brightyellow default ^(From|Subject):
color underline brightgreen default

# Highlight URLs...
color body yellow default "(ftp|http|https|file)://[^ ]+"
# ...and e-mails...
color body blue default "[-a-z_0-9.]+@[-a-z_0-9.]+"
# ...and smilies...
color body red default "((;|:|8\\:|\\=)(-|=|~|_|-'|%|<|)(\\)|Q|P|\\)%))"
# ...and acronyms
color body cyan default "(ACK|ROTFL|LOL|BRB|BTW|HTH|IMHO|IMNSHO|IOW|RTFM)"

color index magenta default ~N         # new messages
color index yellow default ~T		 # tagged messages
color index red default ~D		 # deleted messages
color index cyan default ~F		 # flagged messages
color index blue default ~Q                # replied messages

color index green default (moderator|Moderator|MODERATOR|faq|FAQ)  # specials ;-)

# Headers highlighting
color header magenta default ^(Date)
color header yellow default ^(From|Reply-To)
color header cyan default ^(To|Cc|Bcc|Delivered-To)
color header green default ^(Subject)
color header red default ^(In-Reply-To)
color header blue default ^(X-|User)

# attributes when using a mono terminal
mono header underline ^(From|Subject):
mono quoted bold

