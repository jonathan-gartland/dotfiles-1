#!/bin/bash

EMACS=emacs
EMACSCLIENT=emacsclient
if [ -f $HOME/.emacsconfig ]; then
  . $HOME/.emacsconfig
fi

tempuid=`id -u`
if [ ! -e "/tmp/emacs$tempuid/server" ]; 
then
    exec $EMACS --daemon --funcall server-start
fi
exec $EMACSCLIENT --create-frame --no-wait -s "/tmp/emacs$tempuid/server" "$@"
