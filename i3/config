# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!


# Mod1 --> Alt Key
# Mod4 --> Win Key
set $mod Mod4

# Start thunderbird, subl3, cantata and chromium on specific workspaces.
# Starting additional instances will be started on the current workspace.
# exec --no-startup-id i3-msg 'workspace 5; exec cantata'
# exec --no-startup-id i3-msg 'workspace 4; exec thunderbird'
# exec --no-startup-id i3-msg 'workspace 2; exec subl3'
# exec --no-startup-id i3-msg 'workspace 1; exec chromium'

# The nvidia driver only provides support for Xinerama instead of RandR.
#force_xinerama on

#hide_edge_borders both
#new_window none
#new_float none
#for_window [class="^.*"] border pixel 1

# Font for window titles.
font pango:Sans 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvtc

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec j4-dmenu-desktop
#--dmenu="dmenu -fn 'Sans-8'"
bindsym $mod+Shift+d exec dmenu_run

# dmenu_ssh
bindsym $mod+t exec ~/src/dmenu_ssh/bin/dmenu_ssh.pl

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindcode $mod+d focus child

# workspace definitions
set $ws1 1: Web
set $ws2 2: Subl
set $ws3 3: Term
set $ws4 4: Term
set $ws5 5: Mail
set $ws6 6: Music
set $ws7 7: Misc
set $ws8 8: Misc
set $ws9 9: Misc
set $ws10 10: Steam

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# session menu
bindsym $mod+Shift+e exec i3-nagbar -m "Session menu" -b "Quit" "i3-msg -t command exit" -b "Restart" "sudo reboot" -b "Halt" "sudo halt" -b "Suspend" "sudo systemctl suspend"

# lock screen using i3lock and suspend machine
bindsym $mod+Shift+Control+l exec "i3lock --image=/home/skk/Pictures/hs-2012-37-a-full_jpg.png; sudo systemctl suspend"

# lock screen using i3lock
bindsym $mod+Control+l exec "i3lock --image=/home/skk/Pictures/hs-2012-37-a-full_jpg.png"

# Make the currently focused window a scratchpad
#bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

bindsym $mod+r mode "resize"

# https://github.com/proxypoke/quickswitch-for-i3
bindsym $mod+q exec quickswitch.py

ipc-socket ~/.i3/i3-ipc.sock

# pulse audio volume control
#bindsym XF86AudioLowerVolume exec /usr/bin/pactl set-sink-volume 0 -- '-5%'
#bindsym XF86AudioRaiseVolume exec /usr/bin/pactl set-sink-volume 0 -- '+5%'
#bindsym XF86AudioMute exec /usr/bin/pactl set-sink-volume 0 0
#bindsym XF86Launch1 exec /usr/bin/pactl play-sample that_was_easy
#bindsym XF86MonBrightnessUp exec /usr/bin/xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec /usr/bin/xbacklight -dec 5

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position bottom
    font pango:Sans 8
    #status_command py3status -c ~/.i3/i3status.conf
    status_command i3blocks -c ~/.i3/i3blocks.conf
    tray_output primary
    colors {
        background #073642
        statusline #eee8d5
        focused_workspace  #cb4b16 #cb4b16 #eee8d5
        active_workspace   #cb4b16 #cb4b16 #eee8d5
        inactive_workspace #b58900 #b58900 #eee8d5
    }
}

# class                 border  backgr. text    indicator
client.focused          #859900 #859900 #fdf6e3 #2e9ef4
client.focused_inactive #268bd2 #268bd2 #fdf6e3 #484e50
client.unfocused        #333333 #93a1a1 #fdf6e3 #292d2e


#for_window [class="Steam"] floating enable
