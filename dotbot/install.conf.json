[
    {
        "clean": [
            "~"
        ]
    },
    {
        "shell": [
            [ "git pull", "Updating repo" ],
            [ "git submodule update --init", "Installing submodules" ],
            [ "mkdir -p .smartcd/scripts", "Creating smartcd/scripts dir" ],
            [ "mkdir -p ~/.vim/autoload/", "Creating ~/.vim/autoload dir" ]
        ]
    },
    {
        "link": {
            "~/bin": "bin",
            "~/.dotfiles": "dotfiles",
            "~/.i3": "i3",
            "~/.spacemacs.d": "spacemacs.d",
            "~/.emacs.d": ".spacemacs",
            "~/.tmux": "tmux",
            "~/.zsh": "zsh",
            "~/.zplug": ".zplug",
            "~/.tmux/plugins/tpm": ".tpm",
            "~/.pyenv": ".pyenv",
            "~/.pyenv/plugins/pyenv-virtualenv": ".pyenv-virtualenv",
            "~/.pyenv/plugins/pyenv-installer": ".pyenv-installer",
            "~/.pyenv/plugins/pyenv-doctor": ".pyenv-doctor",
            "~/.pyenv/plugins/pyenv-update": ".pyenv-update",
            "~/.vim/autoload/plug.vim": ".vim-plug/plug.vim",
            "~/.vimrc": "vim/vimrc",
            "~/.smartcd": ".smartcd",
            "~/.smartcd/scripts/home": "smartcd/home",
            "~/.smartcd/scripts/Users": "smartcd/Users",
            "~/.inputrc": "dotfiles/inputrc",
            "~/.rvmrc": "dotfiles/rvmrc",
            "~/.smartcd_config": "dotfiles/smartcd_config",
            "~/.tmux.conf": "tmux/tmux.conf",
            "~/.Xresources": "dotfiles/Xresources",
            "~/.zlogin": "zsh/zlogin.zsh",
            "~/.zlogout": "zsh/zlogout.zsh",
            "~/.zprofile": "zsh/zprofile.zsh",
            "~/.zshenv": "zsh/zshenv.zsh",
            "~/.zshrc": "zsh/zshrc.zsh",
            "~/.myclirc": "dotfiles/myclirc",
            "~/.pymux.conf": "dotfiles/pymux.conf",
            "~/.config/liquidpromptrc": "dotfiles/liquidpromptrc"
        }
    }
]
