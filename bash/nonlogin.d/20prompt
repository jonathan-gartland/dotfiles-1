# -*- mode: shell-script -*-

function set_window_title() {
    echo -ne "\e]2;$*\a"
}

function prompt_command {
   if [ -f ~/Projects/scm-prompt/scm-prompt.pl ]; then
       exit_status=$?
       export PS1="[\u@\h \W]\$ "
       #export PS1=$(~/Projects/scm-prompt/scm-prompt.pl $exit_status)
   else
       export PS1="[\u@\h \W]\$ "
       export PS2=">"
   fi
   set_window_title "${HOSTNAME%%.*}:${PWD/$HOME/~}"
}
export PROMPT_COMMAND=prompt_command
