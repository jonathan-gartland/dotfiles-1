# -*- mode: shell-script -*-

# We'll use these elsewhere

export HOSTNAME=$(/usr/bin/env hostname -f)
export DNS_DOMAIN_NAME=$(/usr/bin/env dnsdomainname -y)

#set xterm title
case "$TERM" in
  xterm | xterm-color)
    XTERM_TITLE='\[\e]0;\W@\u@\H\a\]'
  ;;
esac


# Enable options
shopt -s autocd
shopt -s cdable_vars
shopt -s cdspell
shopt -s checkhash
shopt -s checkjobs
shopt -s checkwinsize
shopt -s cmdhist
shopt -s dirspell
shopt -s dotglob
shopt -s extglob
shopt -s globstar
shopt -s histappend
shopt -s histreedit
shopt -s histverify
shopt -s hostcomplete
shopt -s interactive_comments
shopt -s lithist
shopt -s shift_verbose
#shopt -s soucepath
shopt -s progcomp
shopt -s promptvars
#shopt -o mailwarn

[ -s "$HOME/.scm_breeze/scm_breeze.sh" ] && source "$HOME/.scm_breeze/scm_breeze.sh"

[ -s  "$HOME/.bash/bash-completion/etc/profile.d/bash_completion.sh" ] && source "$HOME/.bash/bash-completion/etc/profile.d/bash_completion.sh"
