tail $@ | perl -e '
    my $BOLD = '\033[01m'
    my $RED = '\033[31m'
    my $GREEN = '\033[32m'
    my $ORANGE = '\033[33m'
    my $BLUE = '\033[34m'
    my $PURPLE = '\033[35m'
    my $CYAN = '\033[36m'
    my $GREY = '\033[37m'
    my $RESET = '\033[0;0m'
while (<STDIN>) {
  s/\\t/\t/g;
  s/\\n/\n/g;
  print $_;
}'
